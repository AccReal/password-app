    <script src="i18n.js"></script>
    <script>
        let currentTab = 'generator';

        function initTheme() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        }

        function updateThemeIcon(theme) {
            document.getElementById('themeIcon').textContent = theme === 'light' ? 'üåô' : '‚òÄÔ∏è';
        }

        function toggleLanguage() {
            const newLang = currentLang === 'ru' ? 'en' : 'ru';
            setLanguage(newLang);
            document.getElementById('langIcon').textContent = newLang === 'ru' ? 'üá∑üá∫' : 'üá¨üáß';
        }

        function showTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName).classList.add('active');
            currentTab = tabName;

            if (tabName === 'statistics') {
                loadStatistics();
            }
        }

        async function generatePassword() {
            const requestBody = {
                length: parseInt(document.getElementById('length').value),
                includeLowercase: document.getElementById('lowercase').checked,
                includeUppercase: document.getElementById('uppercase').checked,
                includeDigits: document.getElementById('digits').checked,
                includeSpecial: document.getElementById('special').checked,
                includeCyrillic: document.getElementById('cyrillic').checked,
                excludeSimilar: document.getElementById('excludeSimilar').checked,
                excludeCharacters: document.getElementById('excludeChars').value
            };

            try {
                const response = await fetch('/api/password/generate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestBody)
                });

                const data = await response.json();
                document.getElementById('generatedPassword').textContent = data.password;
                document.getElementById('generatedResult').classList.remove('hidden');
            } catch (error) {
                alert('–û—à–∏–±–∫–∞: ' + error.message);
            }
        }

        async function validatePassword() {
            const password = document.getElementById('passwordInput').value;
            if (!password) {
                alert('–í–≤–µ–¥–∏—Ç–µ –ø–∞—Ä–æ–ª—å');
                return;
            }

            try {
                const response = await fetch('/api/password/validate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password })
                });

                const data = await response.json();
                displayValidationResult(data);
            } catch (error) {
                alert('–û—à–∏–±–∫–∞: ' + error.message);
            }
        }

        function displayValidationResult(data) {
            document.getElementById('scoreDisplay').textContent = data.score + ' / 100';
            document.getElementById('crackTimeValue').textContent = data.crackTime;
            
            const strengthBar = document.getElementById('strengthBar');
            strengthBar.style.width = data.score + '%';
            strengthBar.textContent = data.strength;
            
            strengthBar.className = 'strength-bar';
            if (data.score <= 25) strengthBar.classList.add('strength-very-weak');
            else if (data.score <= 50) strengthBar.classList.add('strength-weak');
            else if (data.score <= 75) strengthBar.classList.add('strength-medium');
            else if (data.score <= 90) strengthBar.classList.add('strength-strong');
            else strengthBar.classList.add('strength-very-strong');

            const feedback = data.feedback;
            document.getElementById('feedbackDetails').innerHTML = `
                <div class="feedback-item"><strong>${t('sequential')}</strong> ${feedback.hasSequentialChars ? '‚ùå ' + t('found') : '‚úÖ ' + t('notFound')}</div>
                <div class="feedback-item"><strong>${t('repeated')}</strong> ${feedback.hasRepeatedChars ? '‚ùå ' + t('found') : '‚úÖ ' + t('notFound')}</div>
                <div class="feedback-item"><strong>${t('commonPatterns')}</strong> ${feedback.matchesCommonPattern ? '‚ùå ' + t('found') : '‚úÖ ' + t('notFound')}</div>
                <div class="feedback-item"><strong>${t('lengthScore')}</strong> ${feedback.lengthScore} / 30</div>
                <div class="feedback-item"><strong>${t('diversityScore')}</strong> ${feedback.diversityScore} / 30</div>
            `;

            document.getElementById('recommendations').innerHTML = feedback.recommendations
                .map(rec => `<div class="feedback-item">üí° ${rec}</div>`)
                .join('');

            document.getElementById('validationResult').classList.remove('hidden');
        }

        async function comparePasswords() {
            const password1 = document.getElementById('password1').value;
            const password2 = document.getElementById('password2').value;

            if (!password1 || !password2) {
                alert('–í–≤–µ–¥–∏—Ç–µ –æ–±–∞ –ø–∞—Ä–æ–ª—è');
                return;
            }

            try {
                const response = await fetch('/api/password/compare', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password1, password2 })
                });

                const data = await response.json();
                displayCompareResult(data);
            } catch (error) {
                alert('–û—à–∏–±–∫–∞: ' + error.message);
            }
        }

        function displayCompareResult(data) {
            document.getElementById('score1').textContent = data.password1Result.score;
            document.getElementById('score2').textContent = data.password2Result.score;

            const bar1 = document.getElementById('bar1');
            const bar2 = document.getElementById('bar2');

            bar1.style.width = data.password1Result.score + '%';
            bar1.textContent = data.password1Result.strength;
            bar2.style.width = data.password2Result.score + '%';
            bar2.textContent = data.password2Result.strength;

            [bar1, bar2].forEach((bar, idx) => {
                const score = idx === 0 ? data.password1Result.score : data.password2Result.score;
                bar.className = 'strength-bar';
                if (score <= 25) bar.classList.add('strength-very-weak');
                else if (score <= 50) bar.classList.add('strength-weak');
                else if (score <= 75) bar.classList.add('strength-medium');
                else if (score <= 90) bar.classList.add('strength-strong');
                else bar.classList.add('strength-very-strong');
            });

            document.getElementById('winner1').classList.toggle('hidden', data.winner !== 'password1');
            document.getElementById('winner2').classList.toggle('hidden', data.winner !== 'password2');
            document.getElementById('compareRecommendation').textContent = data.recommendation;

            document.getElementById('compareResult').classList.remove('hidden');
        }

        async function loadStatistics() {
            try {
                const response = await fetch('/api/password/statistics');
                const data = await response.json();

                document.getElementById('statGenerated').textContent = data.generatedCount;
                document.getElementById('statValidated').textContent = data.validatedCount;
                document.getElementById('statAvgScore').textContent = data.averageScore.toFixed(1);
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏:', error);
            }
        }

        function copyPassword() {
            const password = document.getElementById('generatedPassword').textContent;
            navigator.clipboard.writeText(password).then(() => {
                alert('–ü–∞—Ä–æ–ª—å —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω!');
            });
        }

        let batchPasswords = [];

        async function generateBatch() {
            const requestBody = {
                count: parseInt(document.getElementById('batchCount').value),
                length: parseInt(document.getElementById('batchLength').value),
                includeLowercase: document.getElementById('batchLowercase').checked,
                includeUppercase: document.getElementById('batchUppercase').checked,
                includeDigits: document.getElementById('batchDigits').checked,
                includeSpecial: document.getElementById('batchSpecial').checked
            };

            try {
                const response = await fetch('/api/password/generate/batch', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestBody)
                });

                const data = await response.json();
                batchPasswords = data.passwords;
                displayBatchPasswords(data.passwords);
            } catch (error) {
                alert('–û—à–∏–±–∫–∞: ' + error.message);
            }
        }

        function displayBatchPasswords(passwords) {
            const list = document.getElementById('batchPasswordsList');
            list.innerHTML = passwords.map((pwd, idx) => 
                `<div style="padding: 8px; border-bottom: 1px solid var(--border-color); color: var(--text-primary);">
                    <strong>${idx + 1}.</strong> ${pwd}
                </div>`
            ).join('');
            document.getElementById('batchResult').classList.remove('hidden');
        }

        function copyAllPasswords() {
            const text = batchPasswords.join('\n');
            navigator.clipboard.writeText(text).then(() => {
                alert(currentLang === 'ru' ? '–í—Å–µ –ø–∞—Ä–æ–ª–∏ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω—ã!' : 'All passwords copied!');
            });
        }

        async function downloadCsv() {
            const requestBody = {
                count: parseInt(document.getElementById('batchCount').value),
                length: parseInt(document.getElementById('batchLength').value),
                includeLowercase: document.getElementById('batchLowercase').checked,
                includeUppercase: document.getElementById('batchUppercase').checked,
                includeDigits: document.getElementById('batchDigits').checked,
                includeSpecial: document.getElementById('batchSpecial').checked
            };

            try {
                const response = await fetch('/api/password/generate/batch/csv', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestBody)
                });

                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'passwords.csv';
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
            } catch (error) {
                alert('–û—à–∏–±–∫–∞: ' + error.message);
            }
        }

        initTheme();
        updateUI();
        document.getElementById('langIcon').textContent = currentLang === 'ru' ? 'üá∑üá∫' : 'üá¨üáß';
    </script>
</body>
</html>
